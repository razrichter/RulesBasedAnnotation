package org.jcvi.annotation.rules
import org.jcvi.annotation.facts.*;

// rule 2573 DEFAULT_METHOD[GB|ABS32828.1]
rule "flagellar glycosylation island protein, CBO2697 family"
 when
	blast_hit1 : BlastHit( program=='blastp', hitId=='GB|ABS32828.1', 
				bitScore >= 160,
				hitPercentLength >= 90,
				queryPercentLength >= 90,  
				percentIdentity >= 80,
				hitQueryLengthRatio <= 5.1 
			)
	gene1 : Feature( featureId == blast_hit1.queryId )
	
 then
	 Annotation a = new Annotation("2573");
	 a.setRoleIds("91");
	 a.setCommonName("flagellar glycosylation island protein, CBO2697 family");
	 gene1.addAssertedAnnotation(a);
	 update(gene1);
end