package org.jcvi.annotation.rules
import org.jcvi.annotation.facts.*;

// rule 2334 THIS_HMM_HIT[TIGR00105] && GEN_STATE[GenProp0006,Bacteria]
rule "50S ribosomal protein L31 by HMM in BACTERIA"
no-loop true
 when
	hmm_hit1 : HmmHit( program=='hmm', hitId=='TIGR00105' )
	 and
	 txn1 : Taxon( parentNames contains 'Bacteria' )
	gene1 : Feature( taxon == txn1, featureId == hmm_hit1.queryId )
	
 then
	 Annotation a = new Annotation("2334");
	 a.setGeneSymbol("rpmE");
	 a.setRoleIds("158");
	 a.setGoIds("GO:0003735,GO:0006412,GO:0022625");
	 a.setCommonName("50S ribosomal protein L31");
	 gene1.addAssertedAnnotation(a);
	 update(gene1);
end